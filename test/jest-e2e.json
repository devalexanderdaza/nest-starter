{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/telegram/(.*)": "<rootDir>/../libs/telegram/src/$1",
    "@app/telegram": "<rootDir>/../libs/telegram/src",
    "@app/sentry/(.*)": "<rootDir>/../libs/sentry/src/$1",
    "@app/sentry": "<rootDir>/../libs/sentry/src"
  }
}